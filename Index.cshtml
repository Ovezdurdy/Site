
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <section class="cta-section theme-bg-light py-5">
        <div class="container text-center">
            <h2 class="heading">Вход пользователя</h2>
            
        </div>
    </section>
    <section class="blog-list px-3 py-5 p-md-5">
        <div class="container">

            @using (Html.BeginForm())
            {
                <div class="col-md-12" style="margin-bottom:15px;margin-top:15px;">
                    <input type="text" name="Login" placeholder="Логин:" class="form-control" />
                </div>

                <div class="col-md-12" style="margin-bottom:15px;margin-top:15px;">
                    <input type="password" name="Password" placeholder="Пароль:" class="form-control" />
                </div>

                <div class="col-md-12" style="margin-bottom:15px;margin-top:15px;">
                    <button type="submit" class="btn btn-primary" style="width:100%;">Вход</button>
                </div>

                <div class="col-md-12" style="margin-bottom:15px;margin-top:15px;text-align:center">
                   @if (ViewBag.message != null)
                   {
                       @Html.Raw(ViewBag.message);
                   }
                </div>
            }
            <nav class="blog-nav nav nav-justified my-5">
                <a class="nav-link-prev nav-item nav-link d-none rounded-left" href="#">Previous<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
            </nav>

        </div>
    </section>


</div>

