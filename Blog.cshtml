
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <section class="cta-section theme-bg-light py-5">
        <div class="container text-center">
            <h2 class="heading">Вход пользователя</h2>

        </div>
    </section>
    <section class="blog-list px-3 py-5 p-md-5">
        <div class="container">

          <div class="col-md-12" style="margin-bottom:15px;margin-top:15px;padding:0;"><a href="/AdminController1/Blog/Add" 
           class="btn btn-dark">Добавить новое</a></div>

            <table class="table table-bordered">

                <tr>
                    <td>Фото</td>
                    <td>Название Блога</td>
                    <td>Операции</td>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/assets/images/blog/" width="85" /></td>
                        <td>@item.BlogName</td>
                        <td>
                            <a href="/AdminController1/Blog/Update/@item.Id" class="btn btn-primary">Редактировать</a>
                            <a href="/AdminController1/Blog/Delete/@item.Id" class="btn btn-danger">Удалить</a>
                        </td>

                    </tr>

                }

            </table>

        </div>
    </section>


</div>

